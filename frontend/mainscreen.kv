BoxLayout:
    orientation: 'vertical'

    MDBottomNavigation:
        #color stuff
        panel_color: 31 / 255, 31 / 255, 31 / 255, 1
        elevation: 12
        font_name: "Gotham-Bold.otf"
        selected_color_background: 0, 0, 1, 0

        MDBottomNavigationItem:
            name: 'screen 1'
            text: "Button"
            icon: 'shield'

            RelativeLayout:
                MDIconButton:
                    icon: 'shield-outline'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.4}
                    size_hint: None, None
                    size: dp(500), dp(500)  # Adjust the size
                    theme_text_color: "Custom"
                    text_color: (31 / 255, 31 / 255, 31 / 255, 1)
                    # Adjust the size of the icon
                    md_bg_color: app.theme_cls.primary_color
                    icon_size: dp(180)
                    elevation: 12

                MDLabel:
                    text: "PRESS BUTTON FOR EMERGENCY"
                    halign: 'center'
                    pos_hint: {'center_x': 0.5, 'top': 0.65}
                    bold:True
                    font_size: 20
                    font_name: "Gotham-Bold.otf"

                MDLabel:
                    text: "   Safety App"
                    pos_hint: {'center_y': 0.9}
                    bold:True
                    font_size: 40
                    font_name: "Gotham-Bold.otf"

                MDLabel:
                    text: "       Note the location service MUST BE ON"
                    pos_hint: {'center_y': 0.83}
                    font_size: 17
                    font_name: "GothamOffice-Bold.otf"

                MDLabel:
                    text: "       MAKE SURE YOU HAVE INTERNET ACCESS"
                    pos_hint: {'center_y': 0.795}
                    font_size: 17
                    font_name: "GothamOffice-Bold.otf"

        MDBottomNavigationItem:
            name: 'screen 2'
            text: "Contacts"
            icon: 'contacts-outline'

            MDLabel:
                text: "contacts here!"
                halign: 'center'


        MDBottomNavigationItem:
            name: 'screen 3'
            text: "Map"
            icon: 'map-marker'

            MDLabel:
                text: "google maps here if possible"
                halign: 'center'

        MDBottomNavigationItem:
            name: 'screen 4'
            text: "Profile"
            icon: 'account-circle-outline'

            MDLabel:
                text: "profile here"
                halign: 'center'